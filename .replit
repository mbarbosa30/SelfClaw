modules = ["nodejs-22", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_log_in_with_replit:2.0.0", "javascript_openai_ai_integrations:2.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Control Panel"

[[workflows.workflow]]
name = "Control Panel"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "start"]
build = ["npm", "run", "build"]

[userenv]

[userenv.production]
SELFCLAW_CALLBACK_URL = "https://selfclaw.app/api/selfclaw/v1/callback"
SELFCLAW_STAGING = "false"

[userenv.shared]

[userenv.development]
SELFCLAW_STAGING = "false"
SELFCLAW_CALLBACK_URL = "https://selfclaw.app/api/selfclaw/v1/callback"
